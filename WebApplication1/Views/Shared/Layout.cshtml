@{
    ViewBag.Title = "Home Page";
}
<html>
<head>
   
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" />


</head> 
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Movies" asp-action="Index">Shopping App</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="App" asp-Action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="App" asp-Action="Cart">Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="App" asp-Action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="App" asp-Action="Registration">Registration</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/app/About">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


 

   @RenderBody()
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
</body>



</html>
